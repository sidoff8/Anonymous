<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/textView_from_chatrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is my Message"
        android:background="@drawable/rounded_edittext_register_login"
        android:padding="16dp"
        android:maxWidth="240dp"
        app:layout_constraintStart_toEndOf="@+id/imageView_from_chatrow"
        app:layout_constraintTop_toTopOf="@+id/imageView_from_chatrow" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_from_chatrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>